<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pedometer.Views.AppShell"
             xmlns:local="clr-namespace:Pedometer.Views"
       NavigationPage.HasNavigationBar="False"
             Visual="Material">
    <Shell.ForegroundColor>
        <Color>#1976d2</Color>
    </Shell.ForegroundColor>
    <Shell.TabBarTitleColor>
        <Color>#1976d2</Color>
    </Shell.TabBarTitleColor>
    <Shell.TabBarDisabledColor>
        <Color>#4791db</Color>
    </Shell.TabBarDisabledColor>
    <Shell.TabBarUnselectedColor>
        <Color>#4791db</Color>
    </Shell.TabBarUnselectedColor>
    <TabBar>
        
        <ShellContent Title="Pedometer" Icon="icon_walk.png" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Settings" Icon="icon_settings.png" Route="AboutPage" ContentTemplate="{DataTemplate local:SettingsPage}" />
        <ShellContent Title="About" Icon="icon_about.png" ContentTemplate="{DataTemplate local:AboutPage}" />
    </TabBar>
</Shell>